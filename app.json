{
  "expo": {
    "name": "TheSpot",
    "slug": "TheSpot",
    "version": "1.0.7",
    "orientation": "portrait",
    "icon": "./app/assets/icon.png",
    "splash": {
      "image": "./app/assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.basilspice.thespot",
      "versionCode": 7,
      "permissions": [ "CAMERA", "READ_EXTERNAL_STORAGE", "com.google.android.c2dm.permission.RECEIVE", "com.sec.android.provider.badge.permission.WRITE", "com.sec.android.provider.badge.permission.READ"  ],
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/logo.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./app/assets/logo.png"
    },
    "description": "",
    "githubUrl": "https://github.com/basilspice/TheSpot"
  }
}
